generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id            String   @id @default(cuid())
  name          String
  slug          String   @unique
  description   String?
  content       String // README content
  category      String   @default("General")
  privateStatus String   @default("public")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  

  // Extracted metadata
  sections  Section[]
  wordCount Int       @default(0)
  readTime  Int       @default(0) // in minutes

  @@map("projects")
}

model Section {
  id        String  @id @default(cuid())
  title     String
  level     Int
  anchor    String // URL anchor/slug
  order     Int // Order in document
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("sections")
}
